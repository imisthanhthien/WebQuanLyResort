    <script>
        $(document).ready(function () {
            $('#clickbando').click(function (e) {
                e.preventDefault();
                $('#clickbando').fadeOut();
                $('#bando').fadeIn();
                $('#clickbandoan').fadeIn();
            });
            $(document).on('click', function (e) {
                if (!$(e.target).closest('#bando, #clickbando').length) {
                    $('#bando').fadeOut();
                    $('#clickbandoan').fadeOut();
                    $('#clickbando').fadeIn();
                }
            });
        });
        $(document).ready(function () {
            $('#clickbandoan').click(function (e) {
                e.preventDefault();
                $('#bando').fadeOut();
                $('#clickbandoan').fadeOut();
            });
        });
        $(document).ready(function () {
            $('#contact').click(function (e) {
                e.preventDefault();
                $('#dlgContact').fadeIn();
            });
            $(document).on('click', function (e) {
                if (!$(e.target).closest('#dlgContact, #contact').length) {
                    $('#dlgContact').fadeOut();
                }
            });
        });
    </script>

    <button id="myBtn" title="Lên đầu trang"><img src="~/Image/Logo/up-arrow.png" title="lên đầu trang" style="width: 50px" /></button>
    <script>
        window.onscroll = function () { scrollFunction() };
        function scrollFunction() {

            if (document.body.scrollTop > 600 || document.documentElement.scrollTop > 600) {
                document.getElementById("myBtn").style.display = "block";
            } else {
                document.getElementById("myBtn").style.display = "none";
            }
        }
        document.getElementById('myBtn').addEventListener("click", function () {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        });
    </script>


